        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = {};\r",
                  "try {\r",
                  "  json = pm.response.json();\r",
                  "} catch (e) {\r",
                  "  console.log(\"Response is not JSON\");\r",
                  "}\r",
                  "\r",
                  "const rawToken =\r",
                  "  json.access_token ||\r",
                  "  json.token ||\r",
                  "  (json.data && (json.data.access_token || json.data.token)) ||\r",
                  "  \"\";\r",
                  "\r",
                  "let actualToken = rawToken;\r",
                  "if (typeof rawToken === \"string\" && rawToken.includes(\"|\")) {\r",
                  "  actualToken = rawToken.split(\"|\")[1];\r",
                  "}\r",
                  "\r",
                  "\r",
                  "pm.environment.set(\"auth_header\", `Bearer ${actualToken}`);\r",
                  "\r",
                  "console.log(\"Saved access_token:\", actualToken);"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
